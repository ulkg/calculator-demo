{{> header}}
<div class="container">
    <section class="company">
        <header class="company-header">
            <h1 class="company-title">{{company.title}}</h1>
			<p class="company-title">{{company.description}}</p>
			<a href="{{company.website}}">Website</a>
            <p class="company-meta">By <strong>{{company.name}}</strong>, on <strong>{{company.addedAt}}</strong></p>
        </header>
        <hr class="my-4">
        <h1>Stromtarife:</h1>
        <div class="row">
            {{#company.electricityTariffs}}
            <div class="col-md-6">
                <div class="col">
                    <h3>{{name}}</h3>
                    <p>Preis pro kWh in Cent: {{pricePerKWh}}</p>
                </div>
            </div>
            {{/company.electricityTariffs}}
        </div>
    </section>
	{{> footer}}
</div>

